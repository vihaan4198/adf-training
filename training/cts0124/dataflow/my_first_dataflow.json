{
	"name": "my_first_dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SQLdatabase987",
						"type": "DatasetReference"
					},
					"name": "readdatabase"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "AzureBlobTgtNew",
						"type": "LinkedServiceReference"
					},
					"name": "target"
				}
			],
			"transformations": [
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SalesOrderID as integer,",
				"          SalesOrderDetailID as integer,",
				"          OrderQty as integer,",
				"          ProductID as integer,",
				"          UnitPrice as decimal(19,4),",
				"          UnitPriceDiscount as decimal(19,4),",
				"          LineTotal as decimal(38,6),",
				"          rowguid as string,",
				"          ModifiedDate as timestamp",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_COMMITTED',",
				"     format: 'table') ~> readdatabase",
				"readdatabase filter(UnitPrice >= 10) ~> filter1",
				"filter1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     container: 'tgtdatafiles',",
				"     folderPath: 'extract_from_sql_database/salesOrderDetails',",
				"     compressionCodec: 'snappy',",
				"     partitionFileNames:['salesOrderDetails.parquet'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> target"
			]
		}
	}
}